<hibernate-mapping>
	<class name="com.hib.Player" table="players">
		<id name="id" type="int" column="id" >
			<generator class="native"/>
		</id>
		<property name="licenceID">
			<column name="licenceID" />
		</property>
		<property name="height">
			<column name="height" />
		</property>
		<property name="weight">
			<column name="weight"/>
		</property>
		<property name="mainPosition">
			<column name="mainPosition"/>
		</property>
	</class>
</hibernate-mapping>