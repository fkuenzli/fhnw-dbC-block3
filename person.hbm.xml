<hibernate-mapping>
	<class name="com.hib.Person" table="persons">
		<id name="id" type="int" column="id" >
			<generator class="native"/>
		</id>
		
		<property name="firstname">
			<column name="firstname" />
		</property>
		<property name="lastname">
			<column name="lastname"/>
		</property>
		
		<joined-subclass name="com.hib.Coach" table="coaches">
			<key column="personID"/>			
		</joined-subclass>
		
		<joined-subclass name="com.hib.Player" table="players">
			<key column="personID"/>
			
			<property name="licenceID">
				<column name="licenceID" />
			</property>
			<property name="height">
				<column name="height" />
			</property>
			<property name="weight">
				<column name="weight"/>
			</property>
			<property name="mainPosition">
				<column name="mainPosition"/>
			</property>
			
		</joined-subclass>
		
		<joined-subclass name="com.hib.Fan" table="fans">
			<key column="personID"/>
			
		</joined-subclass>
		
		
	</class>
</hibernate-mapping>